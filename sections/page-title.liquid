{% schema %}
  {
    "name": "Page Title",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Your Title Here"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Your description text goes here"
      },
      {
        "type": "checkbox",
        "id": "show_description",
        "label": "Show Description",
        "default": true
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Text Alignment",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ],
        "default": "text-center"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "background-1"
      },
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "range",
        "id": "font_size_title",
        "label": "Title Font Size",
        "min": 16,
        "max": 72,
        "step": 2,
        "unit": "px",
        "default": 36
      },
      {
        "type": "range",
        "id": "font_size_description",
        "label": "Description Font Size",
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Padding",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Padding",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 40
      }
    ],
    "presets": [
      {
        "name": "Page Title",
        "category": "Text"
      }
    ]
  }
  {% endschema %}
  
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="page-title-width">
      <div class="section-page {{ section.settings.alignment }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
        {% if section.settings.title != blank %}
          <h1 class="page-title__heading font-dincondensed" style="font-size: {{ section.settings.font_size_title }}px;">{{ section.settings.title }}</h1>
        {% endif %}
        
        {% if section.settings.show_description and section.settings.description != blank %}
          <div class="page-title__description rte font-hiragino-bold" style="font-size: {{ section.settings.font_size_description }}px;">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  <style>

    .section-page{
      display: flex;
      
    }

    .page-title-width{
      width: 100%;
    }
    .page-title__heading {
      margin: 0;
    }
    
    .page-title__description {
      max-width: 720px;
      margin: 0 auto;
    }
    
    .text-left {
      text-align: left;
    }
    
    .text-center {
      text-align: center;
    }
    
    .text-right {
      text-align: right;
    }
    
    .text-left .page-title__description {
      margin: 0;
    }
    
    .text-right .page-title__description {
      margin: 0 0 0 auto;
    }
  </style>