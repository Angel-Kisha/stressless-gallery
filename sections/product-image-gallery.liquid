
{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
    ],
    "presets": [
      {
        "name": "Product Image Gallery",
        "category": "Product"
      }
    ]
  }
  {% endschema %}
  
  {% liquid 
    assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' 
  %}
  
  <div class="product-gallery 
    product-gallery--{{ section.settings.gallery_layout }}" 
    data-section-id="{{ section.id }}"
  >
      <div class="product-gallery__images-container">
        <div class="product-gallery__images product__media-wrapper">
          {% render 'product-media-gallery', 
            variant_images: variant_images, 
            section_settings: section.settings 
          %}
        </div>
      </div>
  </div>
  
  {% stylesheet %}
  
  .product-gallery--grid .product-gallery__images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 10px;
  }
  
  .product-gallery__pagination {
    display: flex;
    justify-content: center;
    margin-top: 15px;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .product-gallery__pagination-dot {
    width: 60px;
    height: 60px;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .product-gallery__pagination-dot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-gallery__pagination-dot.active {
    border-color: #333;
  }
  
  .pagination-dot-placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    color: #666;
  }
  {% endstylesheet %}
  