{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_width",
        "label": "Full Width Gallery",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Product Image Gallery",
        "category": "Product"
      }
    ]
  }
  {% endschema %}
  
  {% liquid 
    assign image_count = product.media.size
  %}
  
  <div class="product-gallery">
    {% if product.media.size > 0 %}
      <div class="product-gallery__container">
        <div class="product-gallery__images-wrapper">
          <div class="product-gallery__images">
            {% for media in product.media limit:3 %}
              <div class="gallery-image">
                {% if media.media_type == 'image' %}
                  {{ media | image_url: width: 800 | image_tag: 
                    loading: 'lazy', 
                    class: 'gallery-img', 
                    alt: media.alt | escape 
                  }}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
  
        <div class="product-gallery__pagination">
          {% for media in product.media limit:3 %}
            <div 
              class="pagination-dot {% if forloop.first %}active{% endif %}" 
              data-slide="{{ forloop.index0 }}"
            >
              {% if media.media_type == 'image' %}
                {{ media | image_url: width: 100 | image_tag: 
                  loading: 'lazy', 
                  class: 'pagination-thumbnail', 
                  alt: media.alt | escape 
                }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="product-gallery__no-images">
        <p>No product images available.</p>
      </div>
    {% endif %}
  </div>
  
  {% stylesheet %}
  .product-gallery__container {
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
  }
  
  .product-gallery__images-wrapper {
    width: 100%;
    overflow: hidden;
  }
  
  .product-gallery__images {
    display: flex;
    width: 300%;
    transition: transform 0.3s ease;
  }
  
  .gallery-image {
    width: calc(100% / 3);
    padding: 0 10px;
    box-sizing: border-box;
  }
  
  .gallery-img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .product-gallery__pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 15px;
  }
  
  .pagination-dot {
    width: 80px;
    height: 80px;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .pagination-dot.active {
    border-color: #007bff;
  }
  
  .pagination-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  {% endstylesheet %}
  
  {% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const imagesWrapper = document.querySelector('.product-gallery__images');
    const paginationDots = document.querySelectorAll('.pagination-dot');
    
    paginationDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        // Remove active class from all dots
        paginationDots.forEach(d => d.classList.remove('active'));
        
        // Add active class to clicked dot
        dot.classList.add('active');
        
        // Move images
        imagesWrapper.style.transform = `translateX(-${index * 33.33}%)`;
      });
    });
  });
  {% endjavascript %}