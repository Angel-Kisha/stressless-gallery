{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_width",
        "label": "Full Width Gallery",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Product Image Gallery",
        "category": "Product"
      }
    ]
  }
  {% endschema %}
  
  <div class="product-gallery">
    {% if product.media.size > 0 %}
      <div class="product-gallery__container">
        <div class="product-gallery__images-wrapper">
          <div class="product-gallery__images">
            {% for media in product.media %}
              <div class="gallery-image">
                {% if media.media_type == 'image' %}
                  {{ media | image_url: width: 800 | image_tag: 
                    loading: 'lazy', 
                    class: 'gallery-img', 
                    alt: media.alt | escape 
                  }}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
  
        <div class="product-gallery__pagination">
          <div class="pagination-progress-bar">
            <div class="pagination-progress-indicator"></div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="product-gallery__no-images">
        <p>No product images available.</p>
      </div>
    {% endif %}
  </div>
  
  {% stylesheet %}
  .product-gallery__container {
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
  }
  
  .product-gallery__images-wrapper {
    width: 100%;
    overflow: hidden;
  }
  
  .product-gallery__images {
    display: flex;
    width: 100%;
    transition: transform 0.3s ease;
  }
  
  .gallery-image {
    min-width: 100%;
    padding: 0 10px;
    box-sizing: border-box;
  }
  
  .gallery-img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .product-gallery__pagination {
    margin-top: 15px;
  }
  
  .pagination-progress-bar {
    width: 100%;
    height: 4px;
    background-color: #e0e0e0;
    position: relative;
  }
  
  .pagination-progress-indicator {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background-color: #007bff;
    width: 0;
    transition: width 0.3s ease;
  }
  {% endstylesheet %}
  
  {% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const imagesWrapper = document.querySelector('.product-gallery__images');
    const progressIndicator = document.querySelector('.pagination-progress-indicator');
    const totalImages = document.querySelectorAll('.gallery-image').length;
    const imagesContainer = document.querySelector('.product-gallery__images-wrapper');
    
    let currentIndex = 0;
  
    function updateProgressBar() {
      const percentComplete = (currentIndex / (totalImages - 1)) * 100;
      progressIndicator.style.width = `${percentComplete}%`;
    }
  
    // Add scroll event listener
    imagesContainer.addEventListener('scroll', function() {
      const scrollPercentage = (this.scrollLeft / (this.scrollWidth - this.clientWidth)) * 100;
      currentIndex = Math.round((totalImages - 1) * (scrollPercentage / 100));
      updateProgressBar();
    });
  
    // Optional: Add keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowRight') {
        currentIndex = Math.min(currentIndex + 1, totalImages - 1);
        imagesContainer.scrollLeft = (currentIndex / (totalImages - 1)) * (imagesContainer.scrollWidth - imagesContainer.clientWidth);
        updateProgressBar();
      } else if (e.key === 'ArrowLeft') {
        currentIndex = Math.max(currentIndex - 1, 0);
        imagesContainer.scrollLeft = (currentIndex / (totalImages - 1)) * (imagesContainer.scrollWidth - imagesContainer.clientWidth);
        updateProgressBar();
      }
    });
  });
  {% endjavascript %}