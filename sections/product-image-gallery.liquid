{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_width",
        "label": "Full Width Gallery",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_media_type_badges",
        "label": "Show Media Type Badges",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable Image Zoom",
        "default": true
      },
      {
        "type": "select",
        "id": "gallery_layout",
        "label": "Gallery Layout",
        "options": [
          {"value": "slider", "label": "Slider"},
          {"value": "grid", "label": "Grid"}
        ],
        "default": "slider"
      }
    ],
    "presets": [
      {
        "name": "Product Image Gallery",
        "category": "Product"
      }
    ]
  }
  {% endschema %}
  
  {% liquid 
    assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' 
  %}
  
  <div 
    class="product-gallery 
    {% if section.settings.enable_full_width %}product-gallery--full-width{% endif %} 
    product-gallery--{{ section.settings.gallery_layout }}" 
    data-section-id="{{ section.id }}"
  >
    {% if product.media.size > 0 %}
      <div class="product-gallery__media-summary">
        <div class="media-summary-info">
          
          {% if section.settings.show_media_type_badges %}
            <div class="media-type-badges">
              {% if image_count > 0 %}
                <span class="badge badge--image">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                  </svg>
                  {{ image_count }} Image{% if image_count > 1 %}s{% endif %}
                </span>
              {% endif %}
              
              {% if video_count > 0 %}
                <span class="badge badge--video">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="23 7 16 12 23 17 23 7"></polygon>
                    <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                  </svg>
                  {{ video_count }} Video{% if video_count > 1 %}s{% endif %}
                </span>
              {% endif %}
              
              {% if model_count > 0 %}
                <span class="badge badge--model">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 3L20 7.5V16.5L12 21L4 16.5V7.5L12 3Z"></path>
                    <line x1="12" y1="12" x2="20" y2="7.5"></line>
                    <line x1="12" y1="12" x2="4" y2="7.5"></line>
                    <line x1="12" y1="22" x2="12" y2="12"></line>
                  </svg>
                  {{ model_count }} 3D Model{% if model_count > 1 %}s{% endif %}
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
  
      <div class="product-gallery__images-container">
        <div class="product-gallery__images">
          {% render 'product-media-gallery', 
            variant_images: variant_images, 
            section_settings: section.settings 
          %}
        </div>
  
        {% if section.settings.gallery_layout == 'slider' and product.media.size > 1 %}
          <div class="product-gallery__pagination">
            {% for media in product.media %}
              <div 
                class="product-gallery__pagination-dot {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index0 }}"
              >
                {% if media.media_type == 'image' %}
                  <img src="{{ media.preview_image | image_url }}" alt="{{ media.alt | escape }}" wid>
                {% else %}
                  <div class="pagination-dot-placeholder">
                    {% if media.media_type == 'video' %}â–¶{% endif %}
                    {% if media.media_type == 'model' %}3D{% endif %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="product-gallery__no-images">
        <p>No product media available.</p>
      </div>
    {% endif %}
  </div>
  
  {% stylesheet %}
  .product-gallery__media-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding: 10px;
    background-color: #f7f7f7;
  }
  
  .media-summary-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .media-type-badges {
    display: flex;
    gap: 10px;
  }
  
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.8em;
  }
  
  .badge svg {
    width: 16px;
    height: 16px;
  }
  
  .badge--image { background-color: rgba(0, 123, 255, 0.1); color: #007bff; }
  .badge--video { background-color: rgba(40, 167, 69, 0.1); color: #28a745; }
  .badge--model { background-color: rgba(255, 193, 7, 0.1); color: #ffc107; }
  
  .product-gallery--grid .product-gallery__images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 10px;
  }
  
  .product-gallery__pagination {
    display: flex;
    justify-content: center;
    margin-top: 15px;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .product-gallery__pagination-dot {
    width: 60px;
    height: 60px;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .product-gallery__pagination-dot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-gallery__pagination-dot.active {
    border-color: #333;
  }
  
  .pagination-dot-placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    color: #666;
  }
  {% endstylesheet %}
  
  {% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const gallery = document.querySelector('.product-gallery__images');
    const paginationDots = document.querySelectorAll('.product-gallery__pagination-dot');
    
    if (paginationDots.length > 0) {
      paginationDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          // Remove active class from all dots
          paginationDots.forEach(d => d.classList.remove('active'));
          
          // Add active class to clicked dot
          dot.classList.add('active');
          
          // Move gallery to selected image
          gallery.style.transform = `translateX(-${index * 100}%)`;
        });
      });
    }
  
    // Zoom functionality
    {% if section.settings.enable_zoom %}
      const zoomContainers = document.querySelectorAll('.product-gallery__image-wrapper');
      
      zoomContainers.forEach(container => {
        const image = container.querySelector('img');
        
        container.addEventListener('mousemove', function(e) {
          const rect = container.getBoundingClientRect();
          const x = (e.clientX - rect.left) / rect.width * 100;
          const y = (e.clientY - rect.top) / rect.height * 100;
          
          image.style.transformOrigin = `${x}% ${y}%`;
          image.style.transform = 'scale(1.5)';
        });
        
        container.addEventListener('mouseleave', function() {
          image.style.transform = 'scale(1)';
        });
      });
    {% endif %}
  });
  {% endjavascript %}