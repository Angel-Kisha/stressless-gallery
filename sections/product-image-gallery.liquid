{% schema %}
  {
    "name": "Product Image Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_width",
        "label": "Full Width Gallery",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_media_type_badges",
        "label": "Show Media Type Badges",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable Image Zoom",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Product Image Gallery",
        "category": "Product"
      }
    ]
  }
  {% endschema %}
  
  {% liquid 
    assign image_count = product.media.size
  %}
  
  <div class="product-gallery {% if section.settings.enable_full_width %}product-gallery--full-width{% endif %}">
    {% if product.media.size > 0 %}
      <div class="product-gallery__main-container">
        <div class="product-gallery__main-image">
          {% for media in product.media limit:3 %}
            <div class="gallery-slide {% if forloop.first %}active{% endif %}">
              {% if media.media_type == 'image' %}
                {{ media | image_url: width: 800 | image_tag: 
                  loading: 'lazy', 
                  class: 'gallery-main-img', 
                  alt: media.alt | escape 
                }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
  
        <div class="product-gallery__pagination">
          {% for media in product.media limit:3 %}
            <div 
              class="pagination-dot {% if forloop.first %}active{% endif %}" 
              data-slide="{{ forloop.index0 }}"
            >
              {% if media.media_type == 'image' %}
                {{ media | image_url: width: 100 | image_tag: 
                  loading: 'lazy', 
                  class: 'pagination-thumbnail', 
                  alt: media.alt | escape 
                }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="product-gallery__no-images">
        <p>No product images available.</p>
      </div>
    {% endif %}
  </div>
  
  {% stylesheet %}
  .product-gallery__main-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .product-gallery__main-image {
    display: flex;
    overflow: hidden;
    position: relative;
    width: 100%;
  }
  
  .gallery-slide {
    display: none;
    width: 100%;
    flex-shrink: 0;
  }
  
  .gallery-slide.active {
    display: block;
  }
  
  .gallery-main-img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .product-gallery__pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 15px;
  }
  
  .pagination-dot {
    width: 80px;
    height: 80px;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .pagination-dot.active {
    border-color: #007bff;
  }
  
  .pagination-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  {% endstylesheet %}
  
  {% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const mainImages = document.querySelectorAll('.gallery-slide');
    const paginationDots = document.querySelectorAll('.pagination-dot');
    
    paginationDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        // Remove active class from all dots and slides
        paginationDots.forEach(d => d.classList.remove('active'));
        mainImages.forEach(img => img.classList.remove('active'));
        
        // Add active class to clicked dot and corresponding slide
        dot.classList.add('active');
        mainImages[index].classList.add('active');
      });
    });
  });
  {% endjavascript %}